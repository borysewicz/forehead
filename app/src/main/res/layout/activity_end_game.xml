<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EndGameActivity" android:background="@color/tile_screen_background">

    <TextView
            android:text="@string/endgame_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endgame_header_TV" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/white" android:textSize="40sp" android:layout_marginTop="176dp"
    />
    <TextView
            android:text="@string/endgame_corr_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endgame_corrAnswer_TV" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/endgame_header_TV" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@android:color/white" android:textSize="30sp"
    />
    <TextView
            android:text="2/10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endgame_corAnswNumber_TV" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/endgame_corrAnswer_TV" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@android:color/white" android:textSize="36sp"/>
    <Button
            android:layout_width="193dp"
            android:layout_height="138dp"
            android:id="@+id/endgame_finish_B"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" style="@android:style/Widget.Holo.Button"
            android:background="@color/title_screen_buttons" android:text="@string/endgame_return"
            android:textColor="@android:color/white" android:textSize="36sp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/endgame_corAnswNumber_TV"/>
</android.support.constraint.ConstraintLayout>